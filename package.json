{
    "name": "@nekzus/templakz",
    "version": "0.0.0-development",
    "description": "Project kickstart assistant: Pre-configured templates for Next.js, React.js, and Expo React Native, styled with Tailwind CSS and integrated with ESLint for code quality assurance.",
    "type": "module",
    "exports": "./bin/index.js",
    "engines": {
        "node": ">=16"
    },
    "files": [
        "bin",
        "lib"
    ],
    "bin": {
        "templakz": "./bin/index.js"
    },
    "keywords": [
        "project kickstarter",
        "project generator",
        "project scaffolding",
        "React.js",
        "Next.js",
        "React Native",
        "Expo",
        "Expo Router",
        "template",
        "boilerplate",
        "project setup",
        "project initialization",
        "package manager",
        "ESLint",
        "TypeScript",
        "Tailwind CSS",
        "developer tools",
        "development environment",
        "CLI tool"
    ],
    "author": "nekzus",
    "license": "MIT",
    "dependencies": {
        "cross-spawn": "7.0.3",
        "figlet": "1.7.0",
        "open": "10.1.0",
        "picocolors": "1.0.1",
        "prompts": "2.4.2",
        "read-package-up": "^11.0.0",
        "yargs": "17.7.2"
    },
    "scripts": {
        "start": "node ./bin/index.js",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix .",
        "commit": "git-cz",
        "semantic-release": "semantic-release --branches main"
    },
    "devDependencies": {
        "cz-conventional-changelog": "3.3.0",
        "eslint": "8.56.0",
        "eslint-config-standard": "17.1.0",
        "eslint-plugin-commonjs": "1.0.2",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-n": "16.6.2",
        "eslint-plugin-promise": "6.1.1",
        "semantic-release": "^22.0.8"
    },
    "directories": {
        "lib": "lib"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Nekzus/templakz.git"
    },
    "bugs": {
        "url": "https://github.com/Nekzus/templakz/issues"
    },
    "homepage": "https://github.com/Nekzus/templakz#readme",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "publishConfig": {
        "access": "public"
    }
}
